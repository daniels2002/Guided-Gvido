<Window x:Class="Guided_Gvido.Login_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guided_Gvido"
        mc:Ignorable="d"
        Title="Login_window" Height="450" Width="800" Background="AntiqueWhite">
    <Grid>
        <TextBox Name="User_name" HorizontalAlignment="Left" Margin="314,111,0,0" TextWrapping="Wrap" Text="Enter name " VerticalAlignment="Top" Width="167" TextChanged="User_name_TextChanged_1" />
        <TextBox  Name ="User_password" HorizontalAlignment="Center" Margin="0,192,0,0" TextWrapping="Wrap" Text="Enter password " VerticalAlignment="Top" Width="171" TextChanged="User_password_TextChanged"  Height="24" />
        <Button Content="Exit" Margin="694,376,18,10" Background="#FFB12727" Click="Button_Click" RenderTransformOrigin="0.308,0.191"></Button>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="374,254,0,0" VerticalAlignment="Top" Click="Button_Click_1" />
    </Grid>
</Window>